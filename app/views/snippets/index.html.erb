<h1>Listing snippets</h1>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>Title</th>
      <th>Body</th>
      <th>Num favorites</th>
      <th>Num views</th>
      <th>Num comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snippets.each do |snippet| %>
      <tr>
        <td><%= snippet.language %></td>
        <td><%= snippet.title %></td>
        <td><%= snippet.body %></td>
        <td><%= snippet.num_favorites %></td>
        <td><%= snippet.num_views %></td>
        <td><%= snippet.num_comments %></td>
        <td><%= link_to 'Show', snippet %></td>
        <td><%= link_to 'Edit', edit_snippet_path(snippet) %></td>
        <td><%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Snippet', new_snippet_path %>
