<div class="col-lg-3">
  <div class="panel panel-default snippet-preview">
    <div class="panel-body">
      <h4><%= link_to snippet.title, snippet_path(snippet) %></h4>
      <ul class="list-unstyled">
        <li><%= glyph("globe") + " " + snippet.language %></li>
      </ul>
      <ul class="list-inline">
        <li><%= glyph "eye-open" %> <%= snippet.num_views %></li>
        <li><%= glyph "heart" %> <%= snippet.num_favorites %></li>
        <li><%= glyph "comment" %> <%= snippet.num_comments %></li>
      </ul>
    </div>
  </div>
</div>
