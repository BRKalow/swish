<div class="row">
  <div class="col-lg-12">
    <%= form_for(@snippet, :html => {class: ""}) do |f| %>
      <%= f.hidden_field :body %>
      <% if @snippet.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

          <ul>
          <% @snippet.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :title, class: "sr-only" %>
          <%= f.text_field :title, class: "form-control col-lg-6", placeholder: "Snippet Title" %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.label :language, class: "sr-only" %>
          <%= f.text_field :language, class: "form-control col-lg-6", placeholder: "Language" %>
        </div>
      </div>
      <div class="field">
        <div id="editor" style="width:100%;height:300px;"></div>
      </div>
      <div class="actions">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
