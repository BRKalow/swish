<div class="media">
  <%= link_to image_tag(avatar_url(comment.user, 80), :size => 80), user_path(comment.user), class: 'media-left' %>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to comment.user.username, user_path(comment.user) %></h4>
    <p><%= comment.body %></p>
    <small>
      <%= time_ago_in_words(comment.created_at) %> ago
    </small>
  </div>
</div>
