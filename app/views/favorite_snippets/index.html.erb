<h1>Listing favorite_snippets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Snippet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_snippets.each do |favorite_snippet| %>
      <tr>
        <td><%= favorite_snippet.user %></td>
        <td><%= favorite_snippet.snippet %></td>
        <td><%= link_to 'Show', favorite_snippet %></td>
        <td><%= link_to 'Edit', edit_favorite_snippet_path(favorite_snippet) %></td>
        <td><%= link_to 'Destroy', favorite_snippet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite snippet', new_favorite_snippet_path %>
